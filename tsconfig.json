{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "bin/types",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "@puremvc/puremvc-typescript-multicore-framework"],
    "outDir": "bin/temp",
    "rootDir": "src"
  },
  "include": [
    "src/index.ts",
    "src/command/**/*"
  ],
  "exclude": ["docs", "node_modules", "bin", "test", "src/interfaces"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "typeRoots": [
    "../node_modules/@types"
  ]
}
